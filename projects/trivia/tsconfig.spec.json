{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": [
      "es2018",
      "dom",
      "es6",
      "es2015.iterable"
    ],
    "paths": {
      "shared-library/*": [
          "../../projects/shared-library/src/lib/*"
      ]
    },
    "outDir": "../out-tsc/spec",
    "module": "commonjs",
    "target": "es2015",
    "baseUrl": "",
    "types": [
      "jest",
      "jquery",
      "jsdom",
      "node"
    ]
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "platforms",
    "hooks",
    "certificates",
    "configurations",
    "release"
  ]
}
